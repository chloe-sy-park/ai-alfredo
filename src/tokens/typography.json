{
  "font": {
    "family": {
      "kr": "Pretendard",
      "ui": "Pretendard",
      "number": "Pretendard",
      "en": "Canela"
    },
    "weight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "size": {
      "display": 32,
      "h1": 24,
      "h2": 20,
      "body": 16,
      "caption": 13,
      "micro": 11
    },
    "lineHeight": {
      "display": 1.2,
      "heading": 1.3,
      "body": 1.55,
      "caption": 1.4,
      "micro": 1.3
    },
    "letterSpacing": {
      "tight": "-0.01em",
      "normal": "0em"
    }
  },
  "typography": {
    "display": {
      "fontFamily": "{font.family.en}",
      "fontSize": "{font.size.display}",
      "fontWeight": "{font.weight.semibold}",
      "lineHeight": "{font.lineHeight.display}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "h1": {
      "fontFamily": "{font.family.kr}",
      "fontSize": "{font.size.h1}",
      "fontWeight": "{font.weight.semibold}",
      "lineHeight": "{font.lineHeight.heading}",
      "letterSpacing": "{font.letterSpacing.tight}"
    },
    "h2": {
      "fontFamily": "{font.family.kr}",
      "fontSize": "{font.size.h2}",
      "fontWeight": "{font.weight.medium}",
      "lineHeight": "{font.lineHeight.heading}",
      "letterSpacing": "{font.letterSpacing.tight}"
    },
    "body": {
      "fontFamily": "{font.family.kr}",
      "fontSize": "{font.size.body}",
      "fontWeight": "{font.weight.regular}",
      "lineHeight": "{font.lineHeight.body}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "caption": {
      "fontFamily": "{font.family.kr}",
      "fontSize": "{font.size.caption}",
      "fontWeight": "{font.weight.regular}",
      "lineHeight": "{font.lineHeight.caption}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "micro": {
      "fontFamily": "{font.family.kr}",
      "fontSize": "{font.size.micro}",
      "fontWeight": "{font.weight.regular}",
      "lineHeight": "{font.lineHeight.micro}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "numberPrimary": {
      "fontFamily": "{font.family.number}",
      "fontSize": "{font.size.h1}",
      "fontWeight": "{font.weight.semibold}",
      "lineHeight": "{font.lineHeight.heading}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "numberSecondary": {
      "fontFamily": "{font.family.number}",
      "fontSize": "{font.size.body}",
      "fontWeight": "{font.weight.regular}",
      "lineHeight": "{font.lineHeight.body}",
      "letterSpacing": "{font.letterSpacing.normal}"
    },
    "button": {
      "fontFamily": "{font.family.ui}",
      "fontSize": "{font.size.body}",
      "fontWeight": "{font.weight.medium}",
      "lineHeight": 1.2,
      "letterSpacing": "{font.letterSpacing.normal}"
    }
  }
}
